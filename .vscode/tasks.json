{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "vite: dev",
            "type": "shell",
            "command": "bun run dev",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/client"
            }
        },
        {
            "label": "bun: dev-server",
            "type": "shell",
            "command": "bun run dev",
            "options": {
                "cwd": "${workspaceFolder}/server"
            }
        },
        {
            "label": "terminate:vite",
            "type": "shell",
            "command": "kill-port 5173"
        }
    ]
}